<%- @default_watchers = DefaultWatcher.find_all_by_user_id(User.current.id).map{|u| u.watcher} %>
<script type="text/javascript">
  $(document).ready(function() {
    var default_watchers = [<%= @default_watchers.map(&:id).join(',') %>];
    $("input[name='issue[watcher_user_ids][]']").each(function() {
      if ($.inArray(parseInt($(this).attr('value')), default_watchers) != -1) {
        $(this).attr('checked', 'checked');
      };
    });
  });
</script>