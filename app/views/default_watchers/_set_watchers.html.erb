<script type="text/javascript">
  $(document).ready(function() {
    var default_watchers = [<%= DefaultWatcher.joins(:watcher).where(:user_id => User.current.id).uniq.pluck(:watcher_id).join(',') %>];
    $.each(default_watchers, function(index, watcher_id) {
      $("input[name='issue[watcher_user_ids][]'][value="+watcher_id+"]").attr('checked', 'checked');
    });
  });
</script>
